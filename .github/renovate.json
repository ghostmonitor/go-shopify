{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":automergeDisabled",
    ":automergeMinor",
    "group:linters",
    "schedule:automergeNonOfficeHours",
    "schedule:nonOfficeHours",
    "docker:disable"
  ],
  "enabled": false,
  "hostRules": [
    {
      "matchHost": "https://github.com/ghostmonitor",
      "hostType": "go",
      "token": "{{ secrets.GHOSTMONITOR_GITHUB_TOKEN }}"
    },
    {
      "matchHost": "https://api.github.com/repos/ghostmonitor",
      "hostType": "github",
      "token": "{{ secrets.GHOSTMONITOR_GITHUB_TOKEN }}"
    }
  ],
  "lockFileMaintenance": {
    "enabled": false
  },
  "rangeStrategy": "pin",
  "ignoreDeps": [],
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/vendor/**",
    "**/examples/**",
    "**/__tests__/**",
    "**/test/**",
    "**/tests/**",
    "**/__fixtures__/**",
    "**/scripts/**"
  ],
  "timezone": "Europe/Budapest",
  "updateNotScheduled": false,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    }
  ],
  "customEnvVariables": {
    "GOPRIVATE": "github.com/ghostmonitor/*",
    "GONOSUMDB": "github.com/ghostmonitor/*",
    "GONOPROXY": "github.com/ghostmonitor/*",
    "GOPROXY": "direct"
  },
  "postUpdateOptions": [
    "gomodTidy"
  ]
}